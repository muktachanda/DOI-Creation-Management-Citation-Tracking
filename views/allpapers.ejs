<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Research Papers</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.11.338/pdf.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .header {
            background-color: #007bff;
            color: #fff;
            text-align: center;
            padding: 10px;
            font-size: 24px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            width: 100%;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .card {
            width: 80%;
            margin: 10px;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-title {
            font-size: 18px;
            margin-bottom: 10px;
            color: #007bff;
        }

        .card-info {
            color: #333;
        }

        .card-canvas {
            max-width: 100%;
            height: auto;
        }

    </style>
</head>

<body>
    <div class="header">
        All Research Papers
    </div><br><br>

    <% papers.forEach((paper) => { %>
        <div class="card">
            <h2 class="card-title">
                <%= paper.name %>
            </h2>

            <p class="card-info">
                Author: <%= paper.author %>
            </p>
    
            <canvas class="card-canvas" id="pdfPreview_<%= paper._id %>" onclick="openPDFFile(`<%= paper.fileLink %>`)"></canvas>
    
            <script>
                // JavaScript to render PDF preview
                document.addEventListener('DOMContentLoaded', function () {
                    const paperId_<%= paper._id %> = '<%= paper._id %>'; // Updated line
                    const filename_<%= paper._id %> = '<%= paper.fileLink %>';
                    const canvas_<%= paper._id %> = document.getElementById('pdfPreview_<%= paper._id %>');
                    const fileURL_<%= paper._id %> = `/openPaper/${filename_<%= paper._id %>}`;
    
                    // Initialize PDF.js
                    pdfjsLib.getDocument(fileURL_<%= paper._id %>).promise.then(function (pdf) {
                        // Fetch the first page
                        return pdf.getPage(1);
                    }).then(function (page) {
                        const viewport = page.getViewport({ scale: 0.5 });
                        canvas_<%= paper._id %>.width = viewport.width;
                        canvas_<%= paper._id %>.height = viewport.height;
    
                        // Render PDF page into the canvas
                        const context = canvas_<%= paper._id %>.getContext('2d');
                        const renderContext = {
                            canvasContext: context,
                            viewport: viewport
                        };
                        page.render(renderContext);
                    });
                });
            </script>
        </div>
    <% }); %>
    

    <script>
        function openPDFFile(filename) {
            const fileURL = `/openPaper/${filename}`;
            console.log('File URL', fileURL);
            window.open(fileURL, '_blank');
        }
    </script>
</body>

</html>
