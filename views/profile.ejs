<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dataset Portal Dashboard</title>
    <!-- Bootstrap CSS theme link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Custom CSS link -->
    <link rel="stylesheet" href="./css/main.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container-fluid {
            margin-top: 20px;
            padding-left: 0;
        }

        .nav-pills {
            background-color: #343a40;
            border-radius: 0;
            padding: 10px;
            position: fixed;
            height: 100%;
        }

        .nav-pills > li > a {
            color: #ffffff;
            border-radius: 0;
            margin-bottom: 5px;
            display: block;
            padding: 10px;
        }

        .nav-pills > li > a:hover,
        .nav-pills > li > a:focus {
            background-color: #007bff;
        }

        .tab-content {
            background-color: #ffffff;
            border-radius: 0;
            box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-left: 220px; /* Adjusted margin for the tab content */
        }

        .tab-pane a {
            display: block;
            padding: 10px 0;
            color: #333;
            text-decoration: none;
        }

        .tab-pane a:hover {
            background-color: #e6f7ff;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.nav-pills a').click(function () {
                $('.tab-content .tab-pane').hide();
                $($(this).attr('href')).show();
            });
            var initialTab = $('.nav-pills .active a').attr('href');
            $(initialTab).show();
        });
    </script>
</head>
<body>
    <div class="container-fluid">
        <ul class="nav nav-pills nav-stacked">
            <li class="active"><a data-toggle="tab" href="#addDataset">Add Dataset</a></li>
            <li><a data-toggle="tab" href="#addResearchPaper">Add Research Paper</a></li>
            <li><a data-toggle="tab" href="#existingDatasets">All Datasets</a></li>
            <li><a data-toggle="tab" href="#existingResearchPapers">All Research Papers</a></li>
            <li><a data-toggle="tab" href="#logout">Logout</a></li>
        </ul>
    </div>

    <div class="container">
        <div class="tab-content">
            <div id="alert" class="alert alert-success alert-dismissible" role="alert" style="margin-top: 10px; display: none;">
                <!-- Message content goes here -->
                <div id="message"></div>
                <!-- Close button for the alert -->
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <!-- Add Dataset Tab -->
            <div id="addDataset" class="tab-pane fade in active">
                <a href="/add-dataset">Add Dataset</a>
            </div>

            <!-- Add Research Paper Tab -->
            <div id="addResearchPaper" class="tab-pane fade">
                <a href="/add-paper">Add Research Paper</a>
            </div>

            <!-- Existing Datasets Tab -->
            <div id="existingDatasets" class="tab-pane fade">
                <a href="/datasets">Existing Datasets</a>
            </div>

            <!-- Existing Research Papers Tab -->
            <div id="existingResearchPapers" class="tab-pane fade">
                <a href="/researchpapers">Existing Research Papers</a>
            </div>

            <!-- Logout Tab -->
            <div id="logout" class="tab-pane fade">
                <a href="/logout">Logout</a>
            </div>
        </div>
    </div>
</body>

<script>
    // JavaScript to show the alert when the page loads
    $(document).ready(function () {
        // Check if the URL has a success parameter
        const urlParams = new URLSearchParams(window.location.search);
        const alertParam = urlParams.get('alert');

        // If the success parameter is present, show the alert
        if (alertParam === 'dsuccess') {
            document.getElementById('message').innerHTML = "Dataset Added Successfully!"
            $('#alert').show();
        }
        else if(alertParam === 'psuccess') {
            document.getElementById('message').innerHTML = "Research Paper Added Successfully!"
            $('#alert').show();
        }
        else if(alertParam === 'lsuccess') {
            document.getElementById('message').innerHTML = "License Template Sent to Admin for approval."
            $('#alert').show();
        }
    });
</script>
</html>
